<h2>注文情報入力</h2>
<div class="container">
 <div class="row">
   <h3>支払い方法</h3>
    <div class="col-12">
     <%= form_with model: @order,url: "/orders/confirm",method: :post do |f| %>
      <%= f.radio_button :payment, Order.payments.key(0) %>
      <%= f.label :payment_credit_card, Order.payments_i18n[:credit_card] %>
      <%= f.radio_button :payment, Order.payments.key(1) %>
      <%= f.label :payment_transfer, Order.payments_i18n[:transfer] %>

  <div class="row">
   <div class="col-12">
    <h3>お届け先</h3>
     <%= radio_button_tag :address2,0 %>
     <%= f.label :address,"ご自身の住所" %>
     <%= current_customer.address %>
   </div>
  </div>
  <div class="row">
   <div class="col-12">
    <%= radio_button_tag :address2,1 %>
    <%= f.label :address,"登録済住所から選択" %>
    <%= f.select :address_id,options_from_collection_for_select(Address.all,:id,:address_display) %>
   </div>
  </div>
  <div class="row">
   <div class="col-12">
     <%= radio_button_tag :address2,2 %>
     <%= f.label :address,"新しいお届け先" %>
   </div>
  </div>
  <div class="row">
   <%= f.label :"郵便番号(ハイフンなし)" %>
  </div>
  <div class="row">
    <%= f.text_field :postal_code %>
  </div>
  <div class="row">
    <%= f.label :"住所" %>
  </div>
  <div class="row">
    <%= f.text_field :address %>
  </div>
  <div class="row">
    <%= f.label :"宛名" %>
  </div>
  <div class="row">
    <%= f.text_field :name %>
  </div>

  <div class="row justify-content-center">
    <%= f.submit "確認画面へ進む"  %>
  </div>

    <% end %>
    </div>
  </div>
</div>